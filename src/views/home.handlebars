
<h1>Productos</h1>

<div class="divBtnCart">
    <button class="btn">Ir al carrito</button>
</div>

<div class="containerCards">
    {{#each products}}
        <div class="card">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <p>$ {{this.price}}</p>
            <button class="btn">Agregar al carrito</button>
        </div>
    {{/each}}
</div>

<div class="paginate">
    <div class="btnPaginate">
        {{#if hasPrevPage}}
            <a href="/products?page={{prevPage}}"> Anterior</a>
        {{/if}}
    </div>
    
    <div class="pPaginate">
        <p>PÃ¡gina {{page}} de {{totalPages}}</p>
    </div>

    <div class="btnPaginate">
        {{#if hasNextPage}}
            <a href="/products?page={{nextPage}}"> Siguiente </a>
        {{/if}}
    </div>
</div>
